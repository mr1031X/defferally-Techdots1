// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

enum UserRole {
  QI
  WEALTH_MANAGER
  REAL_ESTATE_BROKER
  INVESTOR
  LAWYER
  CPA
  OTHER
}

model User {
  id       String   @id @unique @default(uuid())
  name     String
  email    String   @unique
  password String
  phone    String?
  company  String?
  role     UserRole @default(OTHER)
}
